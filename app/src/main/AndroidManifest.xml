<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.developerhaoz.rteammessagehelper">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rteam"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.EditMessageActivity"
            android:windowSoftInputMode="adjustPan"
            >
        </activity>

        <activity android:name=".ui.DisplayMessageActivity">
        </activity>

        <activity android:name=".ui.PersonInfoActivity">
        </activity>

        <activity android:name=".ui.SelectContactsActivity"/>

        <activity android:name=".ui.TestActivity">
        </activity>

        <activity android:name=".ui.SearchContactsActivity"/>

    </application>

</manifest>