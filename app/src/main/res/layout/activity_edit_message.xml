<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <include
        layout="@layout/part_app_toolbar"
        />

    <EditText
        android:id="@+id/edit_message_et_activity_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_add_diary_title"
        android:enabled="true"
        android:gravity="center"
        android:maxLines="10"
        android:minLines="8"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="24dp"
        android:hint="请输入活动名称"
        android:layout_margin="24dp"
        />

    <EditText
        android:id="@+id/edit_message_et_activity_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_add_diary_title"
        android:enabled="true"
        android:maxLines="10"
        android:minLines="8"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:layout_margin="24dp"
        android:hint="请输入活动时间"
        />

</LinearLayout>